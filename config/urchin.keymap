#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

// Home row mods macro
#define HRML(k1,k2,k3,k4) &ht LGUI k1 &ht LCTRL k2 &ht LSHFT k3  &ht LALT  k4
#define HRMR(k1,k2,k3) &ht RALT k1 &ht RSHFT  k2  &ht RCTRL k3

#define WIN 0
#define SYM 1
#define NAV 2
#define MSC 3
#define GAM 4

/ {
    behaviors {
        ht: hold_tap {
            label = "hold_tap";
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <220>;
            quick-tap-ms = <150>;
            global-quick-tap;
            bindings = <&kp>, <&kp>;
        };
        sm: shift_modified {
            label = "shift_modified";
            compatible = "zmk,behavior-mod-morph";
            #binding-cells = <2>;
            bindings = <&kp>, <&kp>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };
    };

    conditional_layers {
        compatible = "zmk,conditional-layers";
        tri_layer {
            if-layers = <SYM NAV>;
            then-layer = <MSC>;
        };
    };

    keymap {
        compatible = "zmk,keymap";
        default_layer {
            bindings = <
            // Main:                            &ht RCTRL k4
            // ╭───────────┬───────────┬───────────┬───────────┬───────────╮   ╭───────────┬───────────┬───────────┬───────────┬───────────╮
            // │     Q     │     W     │     E     │     R     │     T     │   │     Y     │     U     │     I     │     O     │     P     │
              &kp    Q    &kp    W    &kp    E    &kp    R    &kp    T        &kp    Y    &kp    U    &kp    I    &kp    O    &kp    P
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │     A     │     S     │     D     │     F     │     G     │   │     H     │     J     │     K     │     L     │    ( _    │
            HRML(    A     ,     S     ,     D     ,     F )  &kp    G        &kp    H   HRMR(   J     ,     K     ,     L    ) &sm LPAR UNDER
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │     Z     │     X     │     C     │     V     │     B     │   │     N     │     M     │    , '    │    . :    │   </ /    │
              &kp    Z    &kp    X    &kp    C    &kp    V    &kp    B        &kp    N    &kp    M &sm KP_COMMA APOS &sm KP_DOT COLON &sm RET KP_SLASH
            // ╰───────────┴───────────┴───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┴───────────┴───────────╯
            //                                     │  NAV ->   │    <XX    │   │    ._.    │  SYM  </  │
                                                  &lt NAV TAB &kp   BSPC      &kp  SPACE  &lt SYM RET
            //                                     ╰───────────┴───────────╯   ╰───────────┴───────────╯
            >;
        };

        symbol_number_layer {
            bindings = <
            // Symbols and Numbers:
            // ╭───────────┬───────────┬───────────┬───────────┬───────────╮   ╭───────────┬───────────┬───────────┬───────────┬───────────╮
            // │     &     │     |     │     ]     │     }     │     $     │   │     +     │     7     │     8     │     9     │    * ^    │
              &kp  AMPS   &kp  PIPE   &kp  RBKT   &sm   RBRC  &kp  DOLLAR     &kp  PLUS   &kp    N7   &kp    N8   &kp    N9   &sm KP_MULTIPLY CARET
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │    " `    │    /^\    │     [     │     {     │    < >    │   │    = ~    │     4     │     5     │     6     │    0 )    │
              &sm DQT GRAVE &kp  LSHFT &kp  LBKT  &kp   LBRC  &sm  LT GT     &kp KP_EQUAL TILDE &kp N4 &kp   N5   &kp   N6   &sm KP_N0 RPAR
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │     @     │     #     │     !     │     ?     │     \     │   │    - _    │     1     │    2 ,    │    3 .    │    / %    │
              &kp    AT   &kp   HASH  &kp  EXCL   &kp  QMARK  &kp  BSLH       &kp MINUS &kp N1 &sm KP_N2 KP_COMMA &kp KP_N3 KP_DOT &sm KP_SLASH AMPS
            // ╰───────────┴───────────┴───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┴───────────┴───────────╯
            //                                     │    MISC   │    <XX    │   │    ._.    │     V     │
                                                       &trans      &trans          &trans      &trans
            //                                     ╰───────────┴───────────╯   ╰───────────┴───────────╯
            >;
        };

        navigation_layer {
            bindings = <
            // Navigation:  
            // ╭───────────┬───────────┬───────────┬───────────┬───────────╮   ╭───────────┬───────────┬───────────┬───────────┬───────────╮
            // │    ESC    │    XX>    │ Caps Lock │ Print Scr │  Insert   │   │           │   HOME    │  PG DOWN  │   PG UP   │   END     │
              &kp   ESC   &kp   DEL   &kp   CAPS  &kp  PSCRN  &kp INSERT          &trans  &kp  HOME   &kp  PG_DN  &kp  PG_UP  &kp  END
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │    GUI    │   LCTRL   │   LSHFT   │    LALT   │           │   │           │     <     │     V     │    /^\    │     >     │
              &kp  LCTRL  &kp  LSHIFT &kp   TAB   &kp  LGUI       &trans          &trans  &kp   LEFT  &kp   DOWN  &kp    UP   &kp   RIGHT
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │           │           │           │           │           │   │ PLY PAUSE │   MUTE    │ VOL DOWN  │  VOL UP   │    </     │
                  &trans      &trans      &trans      &trans      &trans      &kp  C_PP   &kp C_MUTE  &kp C_VOL_DN &kp C_VOL_UP &kp RET
            // ╰───────────┴───────────┴───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┴───────────┴───────────╯
            //                                     │     V     │    <XX    │   │    ._.    │    MISC   │
                                                      &trans      &trans           &trans     &trans
            //                                     ╰───────────┴───────────╯   ╰───────────┴───────────╯
            >;
        };

        miscelanous_layer {
            bindings = <
            // Miscelanous:
            // ╭───────────┬───────────┬───────────┬───────────┬───────────╮   ╭───────────┬───────────┬───────────┬───────────┬───────────╮
            // │    Fn 1   │    Fn 2   │    Fn 3   │    Fn 4   │ PROFILE 1 │   │ PROFILE 2 │ TOGGLEOUT │           │           │           │
              &kp   F1    &kp   F2    &kp   F3    &kp    F4   &bt BT_SEL 1    &bt BT_SEL 2 &out OUT_TOG   &trans      &trans      &trans
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │    Fn 5   │    Fn 6   │    Fn 7   │    Fn 8   │ PROFILE 0 │   │ PROFILE 3 │           │           │           │           │
              &kp   F5    &kp   F6    &kp   F7    &kp    F8   &bt BT_SEL 0    &bt BT_SEL 3    &trans      &trans      &trans      &trans
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │    Fn 9   │    Fn 10  │    Fn 11  │    Fn 12  │  CLEAR BT │   │ PROFILE 4 │           │           │           │  Gaming   │
              &kp   F9    &kp   F10   &kp   F11   &kp    F12  &bt BT_CLR      &bt BT_SEL 4    &trans      &trans      &trans  &tog  GAM
            // ╰───────────┴───────────┴───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┴───────────┴───────────╯
            //                                     │     V     │    <XX    │   │    ._.    │     V     │
                                                      &trans      &trans           &trans     &trans
            //                                     ╰───────────┴───────────╯   ╰───────────┴───────────╯
            >;
        };

        gaming_layer {
            bindings = <
            // Todo later? Gaming (should be standard with the shift gaps ctrl on the left most column):
            // ╭───────────┬───────────┬───────────┬───────────┬───────────╮   ╭───────────┬───────────┬───────────┬───────────┬───────────╮
            // │    TAB    │     Q     │     W     │     E     │     R     │   │           │           │           │           │           │
                  &trans      &trans      &trans      &trans      &trans          &trans      &trans      &trans      &trans      &trans
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │   LSHIFT  |     A     │     S     │     D     │     F     │   │           │           │           │           │           │
                  &trans      &trans      &trans      &trans      &trans          &trans      &trans      &trans      &trans      &trans
            // ├───────────┼───────────┼───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┼───────────┼───────────┤
            // │   LCTRL   │     Z     │     X     │     C     │     V     │   │           │           │           │           │           │
                  &trans      &trans      &trans      &trans      &trans          &trans      &trans      &trans      &trans  &tog GAM
            // ╰───────────┴───────────┴───────────┼───────────┼───────────┤   ├───────────┼───────────┼───────────┴───────────┴───────────╯
            //                                     │           │   LALT    │   │           │           │
                                                      &trans      &trans          &trans      &trans
            //                                     ╰───────────┴───────────╯   ╰───────────┴───────────╯
            >;
        };
    };
};